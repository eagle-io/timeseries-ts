{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "reporters": [
    "default",
    ["jest-junit", {
      "suiteName": "tests",
      "outputDirectory": "reports",
      "outputName": "report.xml",
      "classNameTemplate": "{classname} - {title}",
      "titleTemplate": "{title}",
      "ancestorSeparator": " â€º ",
      "usePathForSuiteName": "true"
    }]
  ]
}